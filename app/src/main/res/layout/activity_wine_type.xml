<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.WineTypeActivity"
    android:background="@drawable/vineyards40"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold"
        android:text="Red"
        app:layout_constraintBottom_toTopOf="@id/toWineSearchActivity1"
        app:layout_constraintStart_toStartOf="@id/toWineSearchActivity1"
        app:layout_constraintEnd_toEndOf="@id/toWineSearchActivity1"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/toWineSearchActivity1"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@mipmap/ic_red_round"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold"
        android:text="White"
        app:layout_constraintBottom_toTopOf="@id/toWineSearchActivity2"
        app:layout_constraintStart_toStartOf="@id/toWineSearchActivity2"
        app:layout_constraintEnd_toEndOf="@id/toWineSearchActivity2"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/toWineSearchActivity2"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@mipmap/ic_white_round"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold"
        android:text="Rose"
        app:layout_constraintBottom_toTopOf="@id/toWineSearchActivity3"
        app:layout_constraintStart_toStartOf="@id/toWineSearchActivity3"
        app:layout_constraintEnd_toEndOf="@id/toWineSearchActivity3"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/toWineSearchActivity3"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@mipmap/ic_rose_round"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/toWineSearchActivity1"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/toWineSearchActivity1"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold"
        android:text="Sparkling "
        app:layout_constraintBottom_toTopOf="@id/toWineSearchActivity4"
        app:layout_constraintStart_toStartOf="@id/toWineSearchActivity4"
        app:layout_constraintEnd_toEndOf="@id/toWineSearchActivity4"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/toWineSearchActivity4"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:src="@mipmap/ic_sparkling_round"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/toWineSearchActivity2"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/toWineSearchActivity2"
        android:background="@android:color/transparent"
        />



    <ImageButton
        android:id="@+id/toProfileActivity"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/white"
        />

    <ImageButton
        android:id="@+id/toMainActivity"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_home2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/white"
        />

    <ImageButton
        android:id="@+id/FindLoc"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_map2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/white"
        />


</android.support.constraint.ConstraintLayout>