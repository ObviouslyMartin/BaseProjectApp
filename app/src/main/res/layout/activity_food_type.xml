<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.FoodTypeActivity"
    android:background="@drawable/vineyards40">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/toFoodSearchActivity1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@mipmap/ic_launcher_round"
        android:scaleType="fitCenter"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"

        android:layout_marginBottom="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/toFoodSearchActivity2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@mipmap/ic_sandwich_round"
        android:scaleType="fitCenter"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"

        android:layout_marginBottom="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/toFoodSearchActivity3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@mipmap/ic_salmon_round"
        android:scaleType="fitCenter"

        app:layout_constraintTop_toBottomOf="@+id/toFoodSearchActivity1"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/toFoodSearchActivity1"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:id="@+id/toFoodSearchActivity4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@mipmap/ic_cake_round"
        android:scaleType="fitCenter"

        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toBottomOf="@+id/toFoodSearchActivity2"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/toFoodSearchActivity2"
        android:background="@android:color/transparent"
        />



    <ImageButton
        android:id="@+id/toProfileActivity"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/white"
        />

    <ImageButton
        android:id="@+id/toMainActivity"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_home2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/white"
        />

    <ImageButton
        android:id="@+id/FindLoc"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_map2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/white"
        />

</android.support.constraint.ConstraintLayout>